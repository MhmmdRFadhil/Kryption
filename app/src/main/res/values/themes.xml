<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Kryption" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="CustomButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/open_sans_medium</item>
        <item name="backgroundTint">@color/button_disable</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/buttonRippleColor</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>